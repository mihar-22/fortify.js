{
  "name": "fortify.js",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 10",
    "npm": ">= 6",
    "yarn": ">= 1 < 2"
  },
  "scripts": {
    "build": "lerna run build",
    "clean:node": "rimraf yarn.lock node_modules packages/*/node_modules",
    "clean:build": "rimraf packages/*/dist",
    "lint": "eslint --ext ./packages/*/src/**/*{.js,.ts} ./ --ignore-path .gitignore --fix",
    "test": "jest packages/*/src --maxWorkers=1",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "validate": "yarn build lint && yarn test && yarn build",
    "release": "yarn validate && lerna publish --create-release github"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.9",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-terser": "^6.1.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  }
}
