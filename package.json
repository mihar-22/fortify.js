{
  "name": "fortify.js",
  "description": "Customizable authentication microservice built for serverless architectures",
  "version": "1.0.0",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/client.js",
  "module": "dist/client.esm.js",
  "unpkg": "dist/client.js",
  "jsdelivr": "dist/client.js",
  "types": "dist/types/index.d.ts",
  "author": "Rahim Alwer <rahim_alwer@hotmail.com>",
  "homepage": "https://github.com/mihar-22/serverless-auth#readme",
  "repository": "https://github.com/mihar-22/serverless-auth",
  "bugs": {
    "url": "https://github.com/mihar-22/serverless-auth/issues"
  },
  "engines": {
    "node": ">= 10"
  },
  "bin": {
    "key": "./scripts/generateKey.js"
  },
  "keywords": [
    "firebase",
    "aws",
    "lambda",
    "token",
    "secure",
    "session",
    "jwt",
    "auth",
    "liteweight",
    "featherweight",
    "authentication",
    "oauth2",
    "google",
    "facebook",
    "github",
    "graphql",
    "apollo",
    "polka",
    "koa",
    "express",
    "hapi",
    "microservice",
    "lightweight",
    "typescript",
    "serverless",
    "nextjs",
    "netlify",
    "vercel",
    "now",
    "react",
    "preact",
    "svelte"
  ],
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn prebuild && tsc --module commonjs && rollup -c rollup.config.ts",
    "lint": "eslint --ext ./src/**/*{.js,.ts} --ignore-path .gitignore --fix",
    "test": "jest src --maxWorkers=1",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@firebase/auth-types": "^0.10.1",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.1.2",
    "@types/jest": "^25.2.3",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.0.9",
    "@types/nodemailer": "^6.4.0",
    "@types/pino": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "fetch-mock": "^9.10.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "nodemailer": "^6.4.8",
    "pino": "^6.3.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-terser": "^6.1.0",
    "sqlite3": "^4.2.0",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3",
    "winston": "^3.2.1"
  },
  "dependencies": {
    "dayjs": "^1.8.28",
    "hash-equals": "^0.0.3",
    "inversify": "^5.0.1",
    "kleur": "^3.0.3",
    "mustache": "^4.0.1",
    "nanoid": "^3.1.9",
    "node-fetch": "^3.0.0-beta.7",
    "reflect-metadata": "^0.1.13"
  }
}
